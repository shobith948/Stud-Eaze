<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_marks">

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/home_design">

        <TextView
            android:id="@+id/subcode_marks"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Subject Code"
            android:textColor="#fff"
            android:textSize="45sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/text_title"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:padding="-5dp"
            android:text="Marks and  Attendance \nEvaluation"
            android:textColor="#2c2a40"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal"
        android:layout_below="@id/lay1">

        <EditText
            android:layout_marginLeft="15dp"
            android:layout_marginRight="-3dp"
            android:layout_gravity="center"
            android:id="@+id/usn_head"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:hint="USN"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:textAlignment="center"
            android:background="@drawable/marks_border"
            android:layout_below="@id/lay1"/>

        <EditText
            android:id="@+id/test1"
            android:layout_marginRight="-3dp"
            android:layout_gravity="center"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_below="@id/lay1"
            android:layout_toEndOf="@+id/usn_head"
            android:background="@drawable/marks_border"
            android:fontFamily="@font/poppins_semibold"
            android:hint="CIE-1"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/test2"
            android:layout_marginRight="-3dp"
            android:layout_gravity="center"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_below="@id/lay1"
            android:layout_toEndOf="@+id/test1"
            android:background="@drawable/marks_border"
            android:fontFamily="@font/poppins_semibold"
            android:hint="CIE-2"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/test3"
            android:layout_marginRight="-3dp"
            android:layout_gravity="center"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_below="@id/lay1"
            android:layout_toEndOf="@+id/test2"
            android:background="@drawable/marks_border"
            android:fontFamily="@font/poppins_semibold"
            android:hint="CIE-3"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/attendance"
            android:layout_gravity="center"
            android:layout_width="115dp"
            android:layout_height="55dp"
            android:hint="Attendance"
            android:layout_below="@id/lay1"
            android:layout_toEndOf="@+id/test3"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:textAlignment="center"
            android:background="@drawable/marks_border" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay3"
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal"
        android:layout_below="@id/lay2">

        <Button
            android:id="@+id/update"
            android:layout_marginLeft="130dp"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:background="@drawable/login_btn"
            android:fontFamily="@font/poppins_semibold"
            android:text="Update"
            android:textSize="18dp"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>