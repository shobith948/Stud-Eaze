<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin">

    <LinearLayout
        android:id="@+id/admin_head"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/home_design"
        android:orientation="vertical">

        <TextView
            android:id="@+id/admin_htext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Admin Dashboard"
            android:textColor="#2c2a40"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/log_out"
            android:fontFamily="@font/poppins_light"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:background="@drawable/home_btn"
            android:layout_marginLeft="15dp"
            android:paddingStart="10dp"
            android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
            android:text="Logout" />


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/admin_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/notice"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/home_btn"
            android:fontFamily="@font/poppins_semibold"
            android:text="Add notice"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#2C2A40"
            android:textSize="24sp" />

        <Button
            android:id="@+id/remove_std"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/home_btn"
            android:fontFamily="@font/poppins_semibold"
            android:text="Remove Student"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#2C2A40"
            android:textSize="24sp" />

        <Button
            android:id="@+id/add_teacher"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/home_btn"
            android:fontFamily="@font/poppins_semibold"
            android:text="Add Teacher"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#2C2A40"
            android:textSize="24sp" />

        <Button
            android:id="@+id/remove_teacher"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/home_btn"
            android:fontFamily="@font/poppins_semibold"
            android:text="Remove Teacher"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#2C2A40"
            android:textSize="24sp" />

        <Button
            android:id="@+id/add_Table"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/home_btn"
            android:fontFamily="@font/poppins_semibold"
            android:text="add shedule"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#2C2A40"
            android:textSize="24sp" />

    </LinearLayout>
</RelativeLayout>