<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <LinearLayout
        android:id="@+id/lable"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/home_design"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Hello,"
            android:textColor="#2c2a40"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_marginLeft="15dp"
            android:text="Welcome To "
            android:textColor="#2c2a40"
            android:textSize="45dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppins_semibold"
android:textColor="#2c2a40"
            android:text="Stud Eaze"
            android:textSize="45dp" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="195dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="-40dp"
            android:src="@drawable/college" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/t_linear_horizontal1"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@id/lable"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
     >

        <androidx.cardview.widget.CardView
            android:id="@+id/teacher"
            android:layout_width="350dp"
            android:layout_marginHorizontal="25dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/teacher_ico"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Teacher"
                android:textColor="#2c2a40"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="40dp"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/t_linear_horizontal1"
        android:layout_centerInParent="true">


        <androidx.cardview.widget.CardView
            android:id="@+id/std_log"
            android:layout_width="350dp"
            android:layout_marginHorizontal="25dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/student_ico"
                />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Student"
            android:textColor="#2c2a40"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="40dp"
            android:gravity="center"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>