<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stud_dash">

    <LinearLayout
        android:id="@+id/stud_head"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/home_design"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_dash"
            android:layout_width="77dp"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Hi, "
            android:textColor="#2c2a40"
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/S_log_out"
            android:fontFamily="@font/poppins_light"
            android:layout_width="117dp"
            android:layout_marginTop="-60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/home_btn"
            android:layout_marginLeft="250dp"
            android:paddingStart="10dp"
            android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
            android:text="Logout" />

        <TextView
            android:id="@+id/S_text_name"
            android:layout_width="302dp"
            android:layout_height="68dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Student"
            android:textColor="#fff"
            android:textSize="50sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_marginLeft="15dp"

            android:fontFamily="@font/poppins_semibold"
            android:text="Welcome to student dashboard"
            android:textColor="#2c2a40"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/t_linear_horizontal1"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@id/stud_head"
        android:layout_marginTop="75dp"
        android:orientation="horizontal"
        android:padding="10dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/view_attendance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_view_dash">


                <TextView
                    android:id="@+id/take_attendance_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/take_attendance_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Attendance"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/take_attendance_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/attendance" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/S_marks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_view_dash">

                <TextView
                    android:id="@+id/T_marks_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/T_marks_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Marks"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/T_marks_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/score_card" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/t_linear_horizontal2"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@id/t_linear_horizontal1"
        android:orientation="horizontal"
        android:padding="10dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/S_notice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_view_dash">

                <TextView
                    android:id="@+id/T_notice_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/T_notice_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Notice"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/T_notice_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/notice" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_horizontal3"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@id/t_linear_horizontal2"
        android:orientation="horizontal"
        android:padding="10dp">

    </LinearLayout>

</RelativeLayout>

