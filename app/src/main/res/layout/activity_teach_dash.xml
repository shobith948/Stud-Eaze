<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stud_dash">

    <LinearLayout
        android:id="@+id/stud_head"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/home_design"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_dash"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"

            android:fontFamily="@font/poppins_semibold"
            android:text="Hi, "
            android:textColor="#2c2a40"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/T_text_name"
            android:layout_width="370dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"

            android:fontFamily="@font/poppins_semibold"
            android:text="Teacher"
            android:textColor="#fff"
            android:textSize="45sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"

            android:fontFamily="@font/poppins_semibold"
            android:text="Welcome to teacher dashboard"
            android:textColor="#2c2a40"
            android:padding="-5dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/T_log_out"
            android:fontFamily="@font/poppins_light"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:background="@drawable/home_btn"
            android:layout_marginLeft="15dp"
            android:paddingStart="10dp"
            android:drawableLeft="@drawable/ic_baseline_exit_to_app_24"
            android:text="Logout" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/stud_head">

        <Button
            android:id="@+id/take_attendance"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:background="@drawable/home_btn"
            android:fontFamily="@font/poppins_semibold"
            android:text="Take Attendance"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#2C2A40"
            android:textSize="24sp" />


        <Button
            android:id="@+id/notice_display"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/home_btn"
            android:fontFamily="@font/poppins_semibold"
            android:text="Notice"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#2C2A40"
            android:textSize="24sp" />

        <Button
            android:id="@+id/view_table"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/home_btn"
            android:fontFamily="@font/poppins_semibold"
            android:text="view shedule"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#2C2A40"
            android:textSize="24sp" />


    </LinearLayout>

</RelativeLayout>