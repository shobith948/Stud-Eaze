    <LinearLayout
        android:id="@+id/teach_head"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/home_design"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_dash"
            android:layout_width="77dp"
            android:layout_height="64dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Hi, "
            android:textColor="#2c2a40"
            android:textSize="40sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/T_log_out"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="-60dp"
            android:background="@drawable/ic_baseline_exit_to_app_24"
            android:fontFamily="@font/poppins_light" />

        <TextView
            android:id="@+id/T_text_name"
            android:layout_width="302dp"
            android:layout_height="68dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Teacher"
            android:textColor="#fff"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/disSube"
            android:layout_width="323dp"
            android:layout_height="52dp"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="18CS65   "
            android:layout_marginTop="-10dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="-20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Welcome to teacher dashboard"
            android:textColor="#2c2a40"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

