<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".teach_login">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:background="@drawable/teacher"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tlogo"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Stud Eaze"
            android:textColor="#2c2a40"
            android:textSize="35sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/login_bottom2"
        android:layout_width="416dp"
        android:layout_height="349dp"
        android:background="@drawable/card_view"
        android:backgroundTintMode="src_in"
        android:foregroundTintMode="add"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/tlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Teacher"
            android:textColor="#2c2a40"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/subcode"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/view"
            android:inputType="textCapCharacters"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Enter subject code"
            android:includeFontPadding="true"
            android:lineSpacingExtra="15dp"
            android:paddingStart="15dp"
            android:textAllCaps="true"
            android:textColor="#AA00FF"
            android:textColorHint="#AA00FF"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tpass"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/view"
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:ems="10"
            android:fontFamily="@font/poppins_light"
            android:hint="Password"
            android:includeFontPadding="true"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:textAlignment="inherit"
            android:textColorHint="#AA00FF" />




        <Button
            android:id="@+id/tlogin_btn"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="15dp"

            android:background="@drawable/login_btn"
            android:fontFamily="@font/poppins_semibold"
            android:text="Login"
            android:textColor="@color/white" />

    </LinearLayout>
</RelativeLayout>